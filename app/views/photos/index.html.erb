<p style="color: green"><%= notice %></p>

<% content_for :title, "Photos" %>

<h1>Photos</h1>
<% if user_signed_in? && current_user.admin? %>
  <%= link_to 'Subir nueva foto', new_photo_path, class: 'btn btn-primary' %>
<% else %>
  <!-- No mostrar el botÃ³n si no es admin -->
<% end %>

<div id="photos" class="d-flex flex-wrap">
  <% @photos.each do |photo| %>
    <div class="card m-2" style="width: 18rem;">
      <% if photo.image.attached? %>
        <%= image_tag photo.image, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= photo.title %></h5>
        <p class="card-text"><%= photo.content %></p>
        <%= link_to "Show this photo", photo_path(photo), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>