<div class="container mt-3">
  <p class="text-success text-center"><%= notice %></p>

  <div class="text-center">
    <%= render @comentary %>
  </div>

  <div class="text-center mt-3">
    <%= link_to "Edit this comentary", edit_comentary_path(@comentary), class: "btn btn-warning" %>
    <%= link_to "Back to comentaries", comentaries_path, class: "btn btn-secondary" %>
    <%= button_to "Destroy this comentary", @comentary, method: :delete, class: "btn btn-danger" %>
  </div>
</div>